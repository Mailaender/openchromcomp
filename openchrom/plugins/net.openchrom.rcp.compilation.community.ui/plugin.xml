<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="net.chemclipse.rcp.app.ui.net.chemclipse.rcp.application"
            name="OpenChrom Community Edition (Aston) - Preview">
         <property
               name="windowImages"
               value="icons/logo_16x16.png,icons/logo_32x32.png,icons/logo_48x48.png,icons/logo_64x64.png,icons/logo_128x128.png">
         </property>
         <property
               name="aboutText"
               value="OpenChrom Community Edition (Aston) - the open source software for chromatography and mass spectrometry">
         </property>
         <property
               name="aboutImage"
               value="icons/about_250x330.png">
         </property>
         <property
               name="appName"
               value="OpenChrom Community Edition (Aston) - Preview">
         </property>
         <property
               name="applicationXMI"
               value="net.chemclipse.rcp.app.ui/Application.e4xmi">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/net.chemclipse.rcp.app.ui/css/chemclipse.css">
         </property>     
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="net.openchrom.rcp.compilation.community.ui.splash.EnhancedSplashHandler"
            id="net.openchrom.rcp.compilation.community.ui.splash.enhancedSplashHandler">
      </splashHandler>         
      <splashHandlerProductBinding
            productId="net.openchrom.rcp.compilation.community.ui.product"
            splashId="net.openchrom.rcp.compilation.community.ui.splash.enhancedSplashHandler">
      </splashHandlerProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="net.openchrom.rcp.compilation.community.ui.PluginStartup"></startup>
   </extension>
   <extension
         point="org.eclipse.epp.mpc.ui.catalog">
         <catalog
		    description="Install new plug-ins from the OpenChrom marketplace."
		    icon="icons/logo_32x32.png"
		    label="OpenChrom Marketplace"
		    url="http://www.openchrom.net/"
		    selfContained="false">
	    </catalog>
   </extension>

</plugin>
