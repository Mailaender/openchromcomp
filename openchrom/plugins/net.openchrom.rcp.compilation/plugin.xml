<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="net.openchrom.rcp.application"
            name="OpenChrom Community Edition Mattauch - Preview Release">
         <property
               name="windowImages"
               value="icons/logo_16x16.png,icons/logo_32x32.png,icons/logo_48x48.png,icons/logo_64x64.png,icons/logo_128x128.png">
         </property>
         <property
               name="aboutText"
               value="OpenChrom Community Edition Mattauch - the open source software for chromatography and mass spectrometry">
         </property>
         <property
               name="aboutImage"
               value="icons/about_250x330.png">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupMessageRect"
               value="7,252,445,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>  
         <property
               name="appName"
               value="OpenChrom Community Edition Mattauch">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="applicationXMI"
               value="net.openchrom.rcp.app.ui/Application.e4xmi">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/net.openchrom.rcp.app.ui/css/openchrom.css">
         </property>     
      </product>
   </extension>   
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandlerProductBinding
            productId="net.openchrom.rcp.compilation.product"
            splashId="net.openchrom.rcp.splash.openChromSplashHandler">
      </splashHandlerProductBinding>
   </extension>

</plugin>
